{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "allowJs": false,
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "outDir": "lib",
    "declaration": true,
    "moduleResolution": "node",
    "lib": ["es2015", "es2017", "dom"]
  },
  "include": ["./src", "./_types"],
  "exclude": ["./src/**/__tests__/*", "./src/**/__mocks__/*"]
}
